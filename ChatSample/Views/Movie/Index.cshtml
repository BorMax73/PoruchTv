            <tr>
                <td><input type="submit" value="Submit"/></td>
            </tr>
        </table>
    }*@
</div>
<script>
    function send() {
      

        $('#target').html('sending..');

        $.ajax({
            url: '/Movie/Create?urlI=@Model.orig_title',
            type: 'post',
            dataType: 'json',
            contentType: 'application/json',
            success: function (data) {
                $('#target').html(data.msg);
            }
            
        });
    }
    
</script>
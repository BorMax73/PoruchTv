@model poruchTv.Models.Video.Content
@{
    ViewData["Title"] = Model.orig_title;
}
<div>
    <img class="poster-max" src="@Model.imgUrl"/>
    <h2>@Model.ru_title</h2>
    <p>@Model.year</p>
    <p>@Model.overview</p>
    <p>@Model.vote_average</p>
    <form method="post" action="/Movie/Create?urlI=@Model.iframe_src">
        <input type="hidden" value="@Model.imgUrl" name="PhoneId" />
        <input #="target" type="submit" class="btn btn-default" value="Go"/>
    </form>

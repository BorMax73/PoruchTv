@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Http
@using Microsoft.CodeAnalysis
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9595731160145415"
            crossorigin="anonymous"></script>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Customs</title>
    <link rel="stylesheet" href="@Url.Content("~/css/reset.css")"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="@Url.Content("~/css/header.css")"/>
</head>
<body>
<div class="wrapper">
    <header style="box-shadow: rgba(0, 0, 0, 0.16) 0px 10px 36px 0px, rgba(0, 0, 0, 0.06) 0px 0px 0px 1px;">
        <div class="header-row">
            <a href="/Home"><image src=@Url.Content("~/source/logo/logo-min.svg") class="header-logo" alt="Logo"/></a>
            <nav class="header-nav" >
                <div>
                    <a href="/Films" onmouseover="this.style.textDecoration='none';" >Фільми</a>
                <div>
                    <a href="/Friends" id="friends" class="header-nav-friends" onmouseover="this.style.textDecoration='none';">Друзі</a>
                    <a href="/Friends" class="friends-counter" style="border-radius: 25px;"
                       onmouseover="this.style.color = '#91d0fd';this.style.textDecoration = 'none';"
                       onmouseout="this.style.color = 'black';">
                        <p id="friends-counter" style="background: #fdd291; border-radius: 25px; height: 28px; width: 28px; text-align: center; justify-content: center; margin: 0px;}"></p>
                        </>
                    </a>
                </div>
                </div>
                <div class="header-search">
                    <form method="get" action="/Search">
                        <input id="searchInput" minlength="3" name="name" type="text" class="search-input" style="width: 100%"/>
                        <input id="btn" src=@Url.Content("~/source/search.svg") type="image" class="search-button"/>
                    </form>
                </div>
            </nav>
            <div class="header-login">
                <partial name="_LoginPartial"/>

            </div>
        </div>
    </header>

    <div class="Message" id="Message">
        <div class="Message-icon">
            <i class="fa fa-bell-o"></i>
        </div>
        <div class="Message-body">
            <p>Invite to watch film with your friend</p>
            <button class="Message-button" id="js-showMe">Join</button>
            <button class="Message-button" id="js-messageClose">Decline</button>
        </div>
        <button class="Message-close js-messageClose"><i class="fa fa-times"></i></button>
    </div>
    <main style="min-height: 80vh;">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Customs - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</div>

<script type="text/javascript" src="~/lib/signalr.js"></script>
<script type="text/javascript" src="~/lib/signalr.min.js"></script>
<script src="jquery-3.6.0.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
